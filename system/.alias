alias l="ls -la # List in long format with dotfiles
alias ld="ls -ld */" # List directories in long format
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Software alias
alias g="git"
alias v="vim"

# List declared aliases, functions

alias listaliases="alias | sed 's/=.*//'"
alias listfunctions="declare -f | grep '^[a-z].* ()' | sed 's/{$//'" # show non _prefixed functions


