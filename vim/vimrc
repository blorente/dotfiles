syntax on
colorscheme dracula

filetype plugin indent on

set wrap
set ttyfast
set mouse=a

set laststatus=2

set number
set incsearch
set hlsearch

set hidden " Don't force save on buffer switch

filetype plugin indent on
" show existing tab with 4 spaces width
set tabstop=4
" On pressing tab, insert 4 spaces
set expandtab

" Leader aliases for buffer navigation
let mapleader = " "
nmap <Leader><Leader> :ls <cr>
nmap <Leader>1 :1b<cr>
nmap <Leader>2 :2b<cr>
nmap <Leader>3 :3b<cr>
nmap <Leader>4 :4b<cr>
nmap <Leader>5 :5b<cr>
nmap <Leader>6 :6b<cr>
nmap <Leader>7 :7b<cr>
nmap <Leader>8 :8b<cr>
nmap <Leader>9 :9b<cr>

" Convenience for escape
inoremap <C-w> <Esc>:w <cr>
