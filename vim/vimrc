execute pathogen#infect()
syntax on
colorscheme dracula

filetype plugin indent on

set wrap
set ttyfast
set mouse=a

set laststatus=2

set number
set incsearch
set hlsearch

set runtimepath^=~/.vim/bundle/ctrlp.vim

set hidden " Don't force save on buffer switch

filetype plugin indent on
" show existing tab with 4 spaces width
set tabstop=4
" On pressing tab, insert 4 spaces
set expandtab
