% git:ff

# Git generic fast-forward 
git pull --ff-only <remote> <branch>

% git:ffm

# Git fast-forward main from generic remote
git pull --ff-only <remote> main

% git:ffo

# Git fast-forward a branch from origin
git pull --ff-only origin <branch>

% git:ffoh

# Git fast-forward head from origin
git pull --ff-only origin $(git rev-parse --abbrev-ref HEAD)

% git:ffom

# Git fast-forward origin main
git pull --ff-only origin main
